@page "{id:int}"
@model EmployeeManagementSystem.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />

    <div class="form-group">
        <label asp-for="Employee.Name"></label>
        <input asp-for="Employee.Name" class="form-control" />
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Employee.Position"></label>
        <input asp-for="Employee.Position" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Employee.Email"></label>
        <input asp-for="Employee.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Employee.DateOfJoining"></label>
        <input asp-for="Employee.DateOfJoining" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Employee.Salary"></label>
        <input asp-for="Employee.Salary" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
