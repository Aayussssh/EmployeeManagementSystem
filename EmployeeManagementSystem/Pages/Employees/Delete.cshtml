@page "{id:int}"
@model EmployeeManagementSystem.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Employee.Name</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Employee.Position</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Employee.Email</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
